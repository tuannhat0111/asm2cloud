<!DOCTYPE html>

<head>
    <title>
        <%= title %>
    </title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <!-- <link rel='stylesheet' , href='/stylesheets/style.css'> -->
</head>

<body>

    <tbody>
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="card-body p-3 text-center">
                        <h2><b>Manage Product</b></h2>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Evaluation</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <% for (let p of products) { %>
                    <tr>
                        <td>
                            <%= p.productid %>
                        </td>
                        <td>
                            <%= p.productname %>
                        </td>
                        <td>
                            <%= p.productquantity %>
                        </td>
                        <td>
                            <%= p.productprice %>
                        </td>
                        <td>
                            <%= p.qualityevaluation %>
                        </td>
                        <td>
                            <%= p.productdescription %>
                        </td>
                        <td style="display:flex">
                            <form action="/user/updateproduct" style="padding-left:0px; padding-right:0px">
                                <input type="hidden" name="idproducttoupdate" value=<%=p.productid %> >
                                <button class="btn btn-success px-2" type="submit">Update</button>
                            </form>
                            <form action="/user/deleteproduct" method="post" style="padding-left:0px; padding-right:0px ">
                                <input type="hidden" name="idproducttodelete" value=<%=p.productid %> >
                                <button class="btn btn-danger" type="submit">Delete</button>
                            </form>
                        </td>

                    </tr>
                    <% } %>
            </table>
    </tbody>
    <form action="/user/createproduct" method="get">
        <button class="btn btn-success " type="submit ">create</button>
    </form>
</body>