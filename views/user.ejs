<!DOCTYPE html>

<head>
    <title>
        <%= title %>
    </title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <!-- <link rel='stylesheet' , href='/stylesheets/style.css'> -->
</head>

<body>

    <tbody>
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-6">
                            <h2>Manage <b>Employees</b></h2>
                        </div>
                        <div class="col-sm-6">
                            <a href="user/createproduct" class="btn btn-success" data-toggle="modal"><i class="material-icons">î…‡</i> <span>Create</span></a>		
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>ShopID</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <% for (let p of products) { %>
                        <tr>
                            <td>
                                <%= p.productid %>
                            </td>
                            <td>
                                <%= p.productname %>
                            </td>
                            <td>
                                <%= p.productquantity %>
                            </td>
                            <td>
                                <%= p.productprice %>
                            </td>
                            <td>
                                <%= p.productdescription %>
                            </td>
                            <td style="display:flex">
                                <form action="/user/updateproduct" style="padding-left:0px; padding-right:0px">
                                    <input type="hidden" name="idproducttoupdate" value = <%= p.productid %> >
                                    <button class="btn btn-success px-2" type="submit">Update</button>
                                </form>
                                    <form action="/user/deleteproduct" method="post" style="padding-left:0px; padding-right:0px ">
                                        <input type="hidden" name="idproducttodelete" value= <%= p.productid %> >
                                        <button class="btn btn-danger" type="submit">Delete</button>
                                    </form>
                                </td>

                        </tr>
                        <% } %>   
    </tbody>
    </table>
