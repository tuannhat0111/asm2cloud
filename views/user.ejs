<!DOCTYPE html>

<head>
    <title>
        <%= title %>
    </title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <!-- <link rel='stylesheet' , href='/stylesheets/style.css'> -->
    <meta name="viewport" content="width=device-width, initial-scale=1">    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">

</head>

<body>


        <div class="container mt-3">
            <h2><%= title %></h2>
            <p>Wellcome to ATN SHOP </p>            
            <table class="table table-bordered">
                <form action="/user/createproduct" method="get">
                    <button class="btn btn-success " type="submit ">create</button>
                </form>
              <thead>
                <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Evaluation</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                <% for (let p of products) { %>
                    <tr>
                        <td>
                            <%= p.productid %>
                        </td>
                        <td>
                            <%= p.productname %>
                        </td>
                        <td>
                            <%= p.productquantity %>
                        </td>
                        <td>
                            <%= p.productprice %>
                        </td>
                        <td>
                            <%= p.qualityevaluation %>
                        </td>
                        <td>
                            <%= p.productdescription %>
                        </td>
                        <td style="display:flex">
                            <form action="/user/updateproduct" style="padding-left:0px; padding-right:0px">
                                <input type="hidden" name="idproducttoupdate" value=<%=p.productid %> >
                                <button class="btn btn-success px-2" type="submit">Update</button>
                            </form>
                            <form action="/user/deleteproduct" method="post" style="padding-left:0px; padding-right:0px ">
                                <input type="hidden" name="idproducttodelete" value=<%=p.productid %> >
                                <button class="btn btn-danger" type="submit">Delete</button>
                            </form>
                        </td>

                    </tr>
                    <% } %>
                </tbody>
            </table>
            <form action="/logout" method="get">
                <button class="btn btn-primary">Logout</button>
            </form>
        </div>


</body>