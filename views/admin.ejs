<!DOCTYPE html>

<head>
    <title>
        <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <meta http-equiv="refresh" content="30">

</head>

<body>

    <tbody>

        <% if (data != null) { %>
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="card-body p-3 text-center">
                            <h2><b>Company Management</b></h2>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>
                                <span class="custom-checkbox">
                                </span>
                            </th>
                            <th>Name</th>
                            <th>Password</th>
                            <th>Role</th>
                            <th>ShopID</th>
                        </tr>
                    </thead>
                    <% for (let p of data) { %>

                        <tr>
                            <td>
                            </td>
                            <td>
                                <%= p.username %>
                            </td>
                            <td>
                                <%= p.password %>
                            </td>
                            <td>
                                <%= p.role %>
                            </td>
                            <td>
                                <%= p.shopid %>
                            </td>

                        </tr>
                        <% } } %>
    </tbody>
    </table>



    <body>

        <tbody>
            <h2 class="card-body p-3 text-center"><b>Product Management</b></h2>

            <form action="/getProductByShop">
                <select class="form-select" name="Select_Shop">
                    <option selected>Open this select menu</option> 


         <% for (let p of shopIdList) { %> 
    
        <option name = "shopid" value= <%= p.shopid %>> <%= p.shopid %> </option>

         <% } %> 
         <option name = "shopid" value= "All Shop"> All Shop </option>

         
     </select>
                <button class="btn btn-primary" type="submit">Search</button>
            </form>
            <% if (products != null) { %>
                <div class="container mt-3">
                    <h2><%= title %></h2>         
                    <table class="table table-bordered">
                      <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Evaluation</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <% for (let p of products) { %>

                            <tr>
                                <td>
                                    <%= p.productid %>
                                </td>
                                <td>
                                    <%= p.productname %>
                                </td>
                                <td>
                                    <%= p.productquantity %>
                                </td>
                                <td>
                                    <%= p.productprice %>
                                </td>
                                <td>
                                    <%= p.qualityevaluation %>
                                </td>
                                <td>
                                    <%= p.productdescription %>
                                </td>
                            </tr>
                            <% } } %>
        </tbody>
        </table>

        </select>
        <form action="/logout" method="get">
            <button class="btn btn-primary">Logout</button>
        </form>
    </body>